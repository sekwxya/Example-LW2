@model Product

<h2>Добавить</h2>

<form asp-controller="Product" asp-action="Add" method="post">
    <div>
        <label>Бренд:</label>
        <input type="text" asp-for="Brend">
        <span asp-validation-for="Brend" class="text-danger"></span>
    </div>
    <div>
        <label>Модель:</label>
        <input type="text" asp-for="ItemModel">
        <span asp-validation-for="ItemModel" class="text-danger"></span>
    </div>
    <div>
        <label>Цена:</label>
        <input type="text" asp-for="Price">
        <span asp-validation-for="Price" class="text-danger"></span>
    </div>
    <button type="submit">Добавить</button>
</form>
    
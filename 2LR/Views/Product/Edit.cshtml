@model Product

<h2>Редактирование ноутбука</h2>
<form asp-action="edit" asp-controller="Product" asp-route-id="@Model.Id">
    <p>
        <label asp-for="Brend">Бренд</label><br />
        <input type="text" asp-for="Brend" />
    </p>
    <p>
        <label asp-for="ItemModel">Модель</label><br />
        <input type="text" asp-for="ItemModel" />
    </p>
    <p>
        <label asp-for="Price">Цена</label><br />
        <input type="number" asp-for="Price" />
    </p>
    <p>
        <input type="submit" value="Сохранить" />
    </p>
</form>
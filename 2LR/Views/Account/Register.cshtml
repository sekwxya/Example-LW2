@model User
<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-4">
            <form method="post" asp-action="Register" class="border p-5 shadow">
                <h2 class="text-primary text-center mb-4">Регистрация</h2>
                <div class="mb-3">
                    <label asp-for="Login" class="form-label">Логин</label>
                    <input asp-for="Login" class="form-control" />
                    <span asp-validation-for="Login" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="Password" class="form-label">Пароль</label>
                    <input asp-for="Password" class="form-control" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>

                <div class="text-center">
                    <input type="submit" name="Register" value="Зарегистрироваться" class="btn btn-primary" />
                </div>
                <div class="text-center mt-3">
                    <a asp-controller="Account" asp-action="Login" class="btn btn-link">Войти</a>
                </div>
            </form>
        </div>
    </div>
</div>